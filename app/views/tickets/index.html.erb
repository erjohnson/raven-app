<div class="row">
  <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <div class="text-center">
      <br>
        <%= link_to "Ask For Help", new_ticket_path, class: "btn btn-lg btn-primary", remote: true %>
    </div>
    <hr>
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
        show
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Open Tickets</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Closed Tickets</a></li>
      </ul>
    </div>
    <div id="tickets_list">
      <%= render @tickets %>
    </div>
  </div>
</div>
<div id="ticket-modal" class="modal fade"></div>
