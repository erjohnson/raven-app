<div class="row">
  <div class="col-sm-10 col-md-offset-1 col-md-8 col-md-offset-2">
        <h4>
          <%= link_to user_path(@ticket.user) do %>
            <%= image_tag @ticket.user.avatar.url(:thumb), class: "profile-avatar", alt: "#{@ticket.user.name} avatar" %> &nbsp;&nbsp;<%= @ticket.user.name %>
          <% end %> asks
        </h4>
        <br>
        <blockquote>
          <%= @ticket.question %>
          <br>
          <br>
            <%= link_to lesson_path(@ticket.lesson) do %>
              <span class="glyphicon glyphicon-list"></span> &nbsp;<%= @ticket.lesson.name %>, <%= @ticket.lesson.section %>
            <% end %>
        </blockquote>
    <%= @ticket.created_at.getlocal.strftime('%I:%M:%S %p') %>
    <br>
    <% if @ticket.checked_at %>
      <%= @ticket.checked_at.getlocal.strftime('%I:%M:%S %p') %>
    <% end %>
    <br>
    <% if @ticket.closed_at %>
      <%= @ticket.closed_at.getlocal.strftime('%I:%M:%S %p') %>
    <% end %>
  </div>
</div>




